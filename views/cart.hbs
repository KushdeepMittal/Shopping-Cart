<h1>{{title}}</h1>
{{# if products }}
    <div class="cart page">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item">

            <div class = "clearfix">
            <h3 class="pull-left">{{ this.item.title }}</h3>
          <img class = " pull-right" src="/images/{{this.item.img}}" width="300" height="200">
          </div>
          <hr>
            <div class = "clearfix">
            <em class ="pull-left">{{{this.item.description}}}</em>
            <span class="badge pull-left style=margin">{{ this.quantity }}</span>
            
             <a class="pull-right" href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
             <span class ="pull-right Cost">
            <span class ="cost">Cost  </span>: {{ this.price }} Rs
           </span>
            </div>
                
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="text-right">
        <strong>Total: {{ totalPrice }} Rs</strong>
    </div>
    <hr>
    <div class="text-right">
        <a href="#" type="button" class="btn btn-success">Checkout</a>
    </div>
{{ else }}
    Your shopping cart is empty.
{{/if}}
